<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ClMapa"
    android:orientation="vertical"
    android:background="@color/blanco_claro">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/blanco_fondo"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:text="MAPA"
            android:textSize="20dp"
            android:textStyle="bold"
            android:paddingLeft="21dp"></TextView>

        <ImageView
            android:id="@+id/logo"
            android:layout_width="20dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:paddingRight="5dp">

        </ImageView>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <TableLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/llistaBotigues"
            android:layout_width="60dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            />
        <TableRow
            android:background="@color/blanco_fondo"
            android:padding="10dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/plantaadalt"
                android:src="@drawable/plantaadalt"
                android:layout_height="270dp"
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:background="@color/blanco_fondo">
            </ImageView>
        </TableRow>
        <TextView
            android:text="PLANTA Nº1"
            android:layout_marginLeft="130dp"
            android:layout_marginRight="140dp"
            android:layout_marginTop="-5dp"
            android:layout_marginBottom="5dp"
            >
        </TextView>
    </TableLayout>
    </ScrollView>

    <TableLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:background="@color/blanco_fondo"
            android:padding="10dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/plantamitg"
                android:src="@drawable/plantamitg"
                android:layout_height="200dp"
                android:layout_width="match_parent"
                android:layout_weight="3"
                android:background="@color/blanco_fondo">
            </ImageView>
        </TableRow>
        <TextView
            android:text="PLANTA Nº2"
            android:layout_marginLeft="130dp"
            android:layout_marginRight="140dp"
            android:layout_marginTop="-5dp"
            android:layout_marginBottom="5dp"
            >
        </TextView>
    </TableLayout>
    <TableLayout
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TableRow
            android:background="@color/blanco_fondo"
            android:padding="10dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/plantaabaix"
                android:src="@drawable/pantabaixa"
                android:layout_height="270dp"
                android:layout_width="match_parent"
                android:layout_weight="3"
                android:background="@color/blanco_fondo">
            </ImageView>
        </TableRow>
        <TextView
            android:text="PLANTA Nº3"
            android:layout_marginLeft="130dp"
            android:layout_marginRight="140dp"
            android:layout_marginTop="-5dp"
            android:layout_marginBottom="5dp"
            >
        </TextView>
    </TableLayout>
</LinearLayout>