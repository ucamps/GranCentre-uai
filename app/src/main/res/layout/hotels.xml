<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ClHotel"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/groc">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:textSize="20dp"
            android:text="Hotels"
            android:paddingLeft="21dp"></TextView>

        <ImageView
            android:id="@+id/matparc"
            android:layout_width="20dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:src="@drawable/logo"
            android:paddingRight="5dp"></ImageView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="filtra: "
            android:paddingLeft="21dp"></TextView>
        <Spinner
            android:id="@+id/spinner_hotels"
            android:layout_width="wrap_content"
            android:layout_height="48dp" />
    </LinearLayout>

    <TableLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:background="@color/groc"
            android:padding="10dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/imgHotel1"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="3"
                android:background="@color/gris"/>
            <LinearLayout
                android:background="@color/gris"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="5dp">

                <TextView
                    android:text="URH Ciutat de Mataró  ★★★★"
                    android:layout_width="wrap_content"
                    android:textSize="14dp"
                    android:layout_height="wrap_content"></TextView>

                <TextView android:text="Adreça"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/email1"></TextView>

                <TextView
                    android:id="@+id/web1"
                    android:text="Pagina web"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>

                <TextView
                    android:id="@+id/telefon1"
                    android:text="Telefon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>

                <TextView
                    android:id="@+id/ubi1"
                    android:text="Ubicacio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
        </TableRow>



        <TableRow
            android:background="@color/groc"
            android:padding="10dp"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/imgHotel2"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="3"
                android:background="@color/gris"/>
            <LinearLayout
                android:background="@color/gris"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="5dp">
                <TextView
                    android:text="Nuevo Hotel Colón ★★★        "
                    android:layout_width="wrap_content"
                    android:textSize="14dp"
                    android:layout_height="wrap_content"></TextView>

                <TextView android:text="Adreça"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/email2"></TextView>

                <TextView
                    android:id="@+id/web2"
                    android:text="Pagina web"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>

                <TextView
                    android:id="@+id/telefon2"
                    android:text="Telefon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>

                <TextView
                    android:id="@+id/ubi2"
                    android:text="Ubicacio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
        </TableRow>

        <TableRow
            android:background="@color/groc"
            android:padding="10dp"
            android:layout_marginBottom="10dp">
            <ImageView
                android:id="@+id/imgHotel3"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_weight="3"
                android:background="@color/gris" />
            <LinearLayout
                android:background="@color/gris"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="5dp">
                <TextView
                    android:text="HOTEL Barcelona Mataró ★★"
                    android:layout_width="wrap_content"
                    android:textSize="14dp"
                    android:layout_height="wrap_content"></TextView>

                <TextView android:text="Adreça"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/email3"></TextView>

                <TextView
                    android:id="@+id/web3"
                    android:text="Pagina web"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>

                <TextView
                    android:id="@+id/telefon3"
                    android:text="Telefon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>

                <TextView
                    android:id="@+id/ubi3"
                    android:text="Ubicacio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
        </TableRow>

    </TableLayout>
</LinearLayout>
