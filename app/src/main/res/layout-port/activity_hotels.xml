<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ClHotel"
    android:orientation="vertical"
    android:background="@color/cafe_claro">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/cafe">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:text="Hotels"
            android:paddingLeft="21dp"></TextView>

        <Spinner
            android:id="@+id/spinner_hotels"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            />
    </LinearLayout>

    <TableLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>
            <ImageView
                android:layout_weight="3"                android:id="@+id/imgHotel1"
                android:layout_marginStart="10dp"/>
            <LinearLayout
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">
                <TextView
                    android:text="Nom Hotel"
                    android:layout_width="wrap_content"
                    android:textSize="20dp"
                    android:layout_height="wrap_content"></TextView>

                <TextView android:text="AdreÃ§a"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/email1"></TextView>

                <TextView
                    android:id="@+id/web1"
                    android:text="pagina web"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>

                <TextView
                    android:id="@+id/telefon1"
                    android:text="telefon del restaurant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>

                <TextView
                    android:id="@+id/ubi1"
                    android:text="ubicacio del restaurnat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_marginTop="10dp">
            <ImageView
                android:layout_width="215dp"
                android:layout_height="130dp"
                android:id="@+id/imgHotel2"
                android:layout_marginStart="10dp"/>

            <TextView
                android:text="Nom hotel"
                android:typeface="monospace"
                android:textStyle="bold"
                android:textColor="#818285"
                android:textSize="18sp"/>

            <Button
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="Email"
                android:id="@+id/btEmail1"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"/>


        </TableRow>

        <TableRow>
            <ImageView
                android:layout_width="215dp"
                android:layout_height="130dp"
                android:id="@+id/imgHotel3"
                android:layout_marginStart="10dp"/>

            <TextView
                android:text="Nom Hotel"
                android:typeface="monospace"
                android:textStyle="bold"
                android:textColor="#818285"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/btGps3"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:text="GPS" />

        </TableRow>

    </TableLayout>

</LinearLayout>